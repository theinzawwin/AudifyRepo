@model IEnumerable<AudifyProject.Models.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>Story/Essay/Novel</h1>
</section>
<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Stories</h3>
            <a class="btn btn-success pull-right" asp-action="Create">Create New</a>
        </div>
        <div class="box-body">


            <div class="table-responsive">
                <table id="example1" class="table table-bordered table-hover display nowrap margin-top-10 table-responsive dataTable">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Author)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CoverFile)
                            </th>
                            <th>Total Audio</th>
                            <th>Add Audio</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ 
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author.Name)
                                </td>
                                <td>
                                    @{
                                        var status = (item.Status == true ? "Active" : "Inactive");
                                    }
                                    @status
                                </td>
                                <td>
                                    <img src="@item.CoverFile" width="80" height="80" />
                                   
                                </td>
                                <td>@item.Chapters.Count</td>
                                <td><a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Add Audio File</a></td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id">Detail</a> |
                                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                                            i++;
                           }
                    </tbody>
                </table>
                </div>
</div>
</div>
</section>